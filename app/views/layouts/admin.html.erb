<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%= @page_title || "Admin" %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if !flash[:success].blank? %>
  <div class="success">
    <%= flash[:success] %>
  </div>
<% end %>

<% if !flash[:error].blank? %>
  <div class="notice">
    <%= flash[:error] %>
  </div>
<% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; querldox5.com / Oluwatosin Olubiyi</p>
    </div>
  </body>
</html>