<% @page_title = "Admin User List" %>

<div class="user index">
  <h2>Admin Users</h2>

  <%= link_to("Add New Admin User", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Admin users list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Username</th> 
      <th>First Name</th>      
      <th>Last Name</th>
      <th>Email</th> 
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |adminuser| %>
    <tr>
      <td><%= cycle(1..10) %></td>
      <td><%= adminuser.username %></td>
      <td><%= adminuser.first_name %></td>
      <td><%= adminuser.last_name %></td>
      <td><%= adminuser.email %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => adminuser.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => adminuser.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

  <%= link_to("Back to Main Menu", {:controller => 'access', :action => 'index'}, :class => 'action new') %>

</div>
